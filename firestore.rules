rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Wallets: Users can read their own wallet, but NO write access from client (handled by admin API)
    match /wallets/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only server-side via Firebase Admin
    }
    
    // Fiat Wallets: Same as Wallets
    match /fiatWallets/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; 
    }

    // Orders: Users can read/create their own orders
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (resource.data.buyerId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.buyerId == request.auth.uid;
      allow update, delete: if false; // Order updates should handle via API
    }

    // Products: Public read, restrictive write (admin only or seller logic later)
    match /products/{productId} {
      allow read: if true;
      allow write: if isAuthenticated(); // For now, authenticated users can list products
    }
    
    // Transactions: Read-only for owner
    match /transactions/{txId} {
       allow read: if isAuthenticated() && (resource.data.walletId == request.auth.uid);
       allow write: if false;
    }
  }
}
